<h2>Edit Pokemon</h2>

<form action="/pokemon/<%= @pokemons.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="pokemon[name]">Name:</label>
    <input name="pokemon[name]" value="<%= @pokemons.name %>">

    <label for="pokemon[cp]">Combat Points:</label>
    <input name="pokemon[cp]" value="<%= @pokemons.cp %>">

    <label for="pokemon[poke_type]">Poke Type:</label>
    <input name="pokemon[poke_type]" value="<%= @pokemons.poke_type %>">

    <label for="pokemon[img_url]">Picture:</label>
    <input name="pokemon[img_url]" value="<%= @pokemons.img_url %>">

    <input type="submit" value="Update">
</form>
